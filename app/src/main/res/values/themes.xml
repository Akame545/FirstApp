<resources>
    <!--     Base application theme. -->
    <style name="Theme.First" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--    Color primario -->
        <item name="colorPrimary">@color/orange_dark</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--    Color secundario -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--     Color de la Status bar   -->
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="ActionTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/action_bar</item>
    </style>

    <style name="Theme.First.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.First.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.First.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>